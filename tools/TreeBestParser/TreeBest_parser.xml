<tool id="newick_to_JSON_wrapper" name="Newick to JSON" version="0.1.1">
    <description>
        Generate a JSON formated tree from Newick format
    </description>
    <command>
        <![CDATA[
        perl $__tool_directory__/TreeBest_parser.pl 
        $inputFile > $output
        ]]>
    </command>

    <inputs>
        <param name="inputFile" type="data" format="nhx" label="Newick file" help="Newick file format" />
    </inputs>

    <outputs>
         <data name="output" format="txt" label="$tool.name on ${on_string}" />
    </outputs>

    <help> 
        <![CDATA[
        Simple tool to convert a newick format tree into a JSON formated tree.
        ]]>
    </help>
    <citations>
        
    </citations>
</tool>